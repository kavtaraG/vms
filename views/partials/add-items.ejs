<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        const doAdd = async () => {
           
            let id = ''; <% if(store.id){ %> id = "<%= store.id %>" <% } %>
            let brand = document.getElementById('brand').value;
            let purpose = document.getElementById('purpose').value;
            let origin = document.getElementById('origin').value;
            let inStock = document.getElementById('in-stock').value;
            let price = document.getElementById('price').value;
            let data = {id, brand, purpose, origin, inStock, price};
            let response = await fetch('/api/v2/store', {
                method: 'POST', // or 'PUT'
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
                })
                .then((response) => response.json())
                .then((data) => {
                    
                    return data;
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
                if(response.status == 'ok'){
                    location = '/store'
                }else{
                    alert(response.msg);
                }
        }
    </script>
    <div id="add-conteiner">
        <input id="brand" type="text" placeholder="Brand" value="<%= store.brand %>"><br><br>
        <input id="purpose" type="text" placeholder="Purpose" value="<%= store.purpose %>"><br><br>
        <input id="origin" type="text" placeholder="Origin" value="<%= store.origin %>"><br><br> 
        <input id="in-stock" type="text" placeholder="In Stock" value="<%= store.inStock %>"><br><br>
        <input id="price" type="text" placeholder="Price" value="<%= store.price %>"><br><br>
        <input id="btn" type="button" value="<%= buttonName %>" onclick="doAdd()">
        <input id="btn" type="button" value="Cancel" onclick="location='/store'">
    </div>
</body>
</html>